@model ProyectoHogarDulceCorazonJoelGramajo.Models.Fichas_médicas

@{
    ViewBag.Title = "Create";
}

<h2>Crear registro</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Fichas médicas</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class = "control-label col-md-2">Código ficha</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Código_ficha_médica, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Código_ficha_médica, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class = "control-label col-md-2">Fecha emisión</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fecha_de_emisión, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fecha_de_emisión, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class = "control-label col-md-2">Niño</p>
            <div class="col-md-10">
                @Html.DropDownList("Niño", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Niño, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
