@model IEnumerable<ProyectoHogarDulceCorazonJoelGramajo.Models.Fichas_médicas>

@{
    ViewBag.Title = "Index";
}

<h2>Administración de Fichas médicas</h2>

<p>
    @Html.ActionLink("Crear nuevo registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha emisión
        </th>
        <th>
            Nombre niño
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_de_emisión)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Niños.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Código_ficha_médica }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Código_ficha_médica }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Código_ficha_médica })
        </td>
    </tr>
}

</table>
