@model IEnumerable<ProyectoHogarDulceCorazonJoelGramajo.Models.Padecimientos>

@{
    ViewBag.Title = "Index";
}

<h2>Administración de padecimientos</h2>

<p>
    @Html.ActionLink("Crear nuevo registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Padecimiento
        </th>
        <th>
            Notas adicionales
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_padecimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notas_adicionales)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Padecimiento }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Padecimiento }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Padecimiento })
        </td>
    </tr>
}

</table>
