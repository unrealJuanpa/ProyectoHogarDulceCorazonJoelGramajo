@model IEnumerable<ProyectoHogarDulceCorazonJoelGramajo.Models.Asignar_padre_a_adopción>

@{
    ViewBag.Title = "Index";
}

<h2>Administración de asignación de padres a adopción</h2>

<p>
    @Html.ActionLink("Crear nuevo registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Adopción de niño
        </th>
        <th>
            Nombre padre
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Adopciones.Adopción_de_niño)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Candidatos_a_padres_adoptivos.Nombre_padre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Padre_adopción }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Padre_adopción }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Padre_adopción })
        </td>
    </tr>
}

</table>
