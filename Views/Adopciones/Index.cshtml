@model IEnumerable<ProyectoHogarDulceCorazonJoelGramajo.Models.Adopciones>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear nuevo registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha adopción
        </th>
        <th>
            Fecha mudanza
        </th>
        <th>
            Nombre niño
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_adopción)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_mudanza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Niños.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Adopción_de_niño }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Adopción_de_niño }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Adopción_de_niño })
            </td>
        </tr>
    }

</table>
